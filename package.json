{
  "name": "iobroker.power-off",
  "version": "1.0.6",
  "description": "Allows to power off your linux box",
  "author": {
    "name": "Daniel Keller",
    "email": "jobe451@gmail.com"
  },
  "homepage": "https://github.com/jobe451/ioBroker.power-off",
  "license": "MIT",
  "keywords": [
    "USV",
    "UPS",
    "reboot",
    "neustart",
    "power off",
    "ausschalten",
    "shutdown"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jobe451/ioBroker.power-off.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.0",
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@iobroker/adapter-react": "2.0.15",
    "@iobroker/testing": "^2.5.2",
    "@material-ui/core": "^4.12.3",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.10",
    "@types/proxyquire": "^1.3.28",
    "@types/react-dom": "^17.0.11",
    "@types/react": "^17.0.38",
    "@types/sinon": "^10.0.8",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "axios": "^0.25.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint": "^8.7.0",
    "gulp": "^4.0.2",
    "mocha": "^9.2.1",
    "parcel-bundler": "^1.12.5",
    "proxyquire": "^2.1.3",
    "react-dom": "^17.0.2",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:parcel": "parcel build admin/src/index.tsx -d admin/build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts && npm run build:parcel",
    "watch:parcel": "parcel admin/src/index.tsx -d admin/build",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src/ admin/src/",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/jobe451/ioBroker.power-off/issues"
  },
  "readmeFilename": "README.md"
}
